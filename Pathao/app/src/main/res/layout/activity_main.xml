<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suleiman.pagination.Activity.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/cardView1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="@string/trending"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trendingList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/activity_margin_content"
                android:paddingTop="@dimen/activity_margin_content"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/cardView2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="@string/now_showing"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/nowshowing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/activity_margin_content"
                android:paddingTop="@dimen/activity_margin_content"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/cardView3"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="@string/upcoming"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upcoming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/activity_margin_content"
                android:paddingTop="@dimen/activity_margin_content"/>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/activity_margin_content"
            android:paddingTop="@dimen/activity_margin_content"/>

        <ProgressBar
            android:id="@+id/main_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>







</FrameLayout>


